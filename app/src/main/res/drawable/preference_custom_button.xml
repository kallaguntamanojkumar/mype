<!-- res/drawable/custom_button.xml -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#FFB0BEC5"> <!-- Light grey ripple effect -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#FFB0BEC5" /> <!-- Mask color when pressed -->
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#FFFFFFEF"
                android:endColor="#2FB0BEC5"/>
            <corners android:radius="12dp" />
            <padding
                android:bottom="16dp"
                android:left="16dp"
                android:right="16dp"
                android:top="16dp" />
        </shape>
    </item>
</ripple>
